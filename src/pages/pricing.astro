  <script>
    // このスクリプトは、料金表をスマートフォンで正しく表示するために必要です。
    // ページの読み込みが完了した後に実行されます。
    document.addEventListener('DOMContentLoaded', () => {
      // .responsive-tableクラスを持つ全てのテーブルを取得
      const tables = document.querySelectorAll('.responsive-table');

      tables.forEach(table => {
        // 各テーブルのヘッダー(thead内のth)を取得します。
        // 最初のヘッダー（例: "サービス内容"）はラベルとして不要なので除外します。
        const headers = Array.from(table.querySelectorAll('thead th'))
                             .slice(1)
                             .map(th => th.textContent.trim());

        // 各テーブルのボディ(tbody)内の全ての行(tr)を取得します。
        const rows = table.querySelectorAll('tbody tr');

        rows.forEach(row => {
          // 各行の全てのデータセル(td)を取得します。
          const cells = row.querySelectorAll('td');
          cells.forEach((cell, index) => {
            // セルに対応するヘッダーが存在する場合、
            // そのヘッダーのテキストを`data-label`属性としてセルに設定します。
            // これにより、CSSの::before疑似要素でラベルを表示できるようになります。
            if (headers[index]) {
              cell.setAttribute('data-label', headers[index]);
            }
          });
        });
      });
    });
  </script>
