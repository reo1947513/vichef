<style>
  :root { --primary-color: #007bff; }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .page-title {
    font-size: 2.5rem;
    text-align: center;
    margin: 4rem 0 1rem 0;
  }
  .page-subtitle {
    text-align: center;
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 4rem;
  }
  .plan-section {
    margin-bottom: 5rem;
  }
  .plan-section h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    padding-left: 1rem;
    border-left: 5px solid var(--primary-color, #007bff);
  }
  .table-wrapper {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    overflow-x: auto;
  }
  .responsive-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 600px;
  }
  .responsive-table th, .responsive-table td {
    border: 1px solid #ddd;
    padding: 1rem;
    text-align: center;
    white-space: nowrap;
  }
  .responsive-table thead {
    background-color: var(--primary-color);
    color: white;
  }
  .responsive-table tbody th {
    text-align: left;
    background-color: #f8f9fa;
    font-weight: bold;
  }
  .price-row {
    font-weight: bold;
    font-size: 1.2rem;
  }
  .price-row td {
    background-color: #fffbef;
  }
  
  .sub-plan-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
  .sub-plan h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  /*********************************
   * *
   * スマホ用のスタイル (768px以下) *
   * *
   *********************************/
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }
    .page-title {
      font-size: 2rem;
    }
    .plan-section h2 {
      font-size: 1.5rem;
    }
    .table-wrapper {
      box-shadow: none;
      background: none;
      overflow-x: visible;
      border-radius: 0;
    }
    .responsive-table {
      border: none;
    }
    .responsive-table thead {
      display: none;
    }
    .responsive-table tbody, .responsive-table tr, .responsive-table td, .responsive-table th {
      display: block;
      width: 100% !important;
      box-sizing: border-box;
    }
    .responsive-table tr {
      margin-bottom: 2rem;
      border: 1px solid #ddd;
      border-radius: 8px;
      background: white;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .responsive-table td {
      text-align: right;
      padding-left: 50%;
      position: relative;
      border-bottom: 1px solid #eee;
    }
    .responsive-table td:last-child {
      border-bottom: none;
    }
    .responsive-table td::before {
      content: attr(data-label);
      position: absolute;
      left: 1rem;
      width: calc(50% - 2rem);
      text-align: left;
      font-weight: bold;
      color: #555;
    }
    .responsive-table th {
      display: none;
    }
    .price-row td {
      background-color: var(--primary-color);
      color: white;
      font-size: 1.3rem;
      border-radius: 0 0 7px 7px;
    }
    .price-row td::before {
      color: white;
    }
    .sub-plan-grid {
        grid-template-columns: 1fr;
    }
  }
</style>
